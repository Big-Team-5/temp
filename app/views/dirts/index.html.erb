  
<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h2">Dirts</h1>

    <% if @dirts.exists? %>
      <%= link_to 'New Dirt', new_dirt_path, class: "btn btn-default" %>
    <% end %>
  </div>

  <% if @dirts.exists? %>
    <div class="bg-white rounded shadow">
      <table class="w-full">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Game</th>

            <th class="p-3 uppercase text-left text-xs text-gray-700">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @dirts.each do |dirt| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                          <td class="p-3"><%= dirt.game %></td>
            
            <td>
              <%= link_to "View", dirt, class: "btn btn-default" %>
              <%= link_to "Edit", edit_dirt_path(dirt), class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <div class="bg-white rounded shadow flex items-center justify-between p-8">
      <div class="flex-1 text-center">
        <p class="text-xl font-semibold mb-4">Create your first Dirt</p>
      <%= link_to 'New Dirt', new_dirt_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>